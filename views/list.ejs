 <%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %>! </h1>     
    </div>

    <div class="box">
        
        <% itemsChosen.forEach(element=>{ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="myCheckbox" value="<%=element._id %>" type="checkbox" onchange="this.form.submit()">
                    
                    <p>  <%=element.item %></p>
                </div>
                <input type="hidden" name="hiddenListname" value="<%=listTitle%>"></input>
            </form>
        <% }) %>
    
     <form class="item" action="/" method="post">

        <input name="userInput" type="text" placeholder="New Event" autocomplete="off">
        <button type="submit" name="button"  value= <%=listTitle%>>+</button>
     </form>
</div>


<%- include("footer") -%>

